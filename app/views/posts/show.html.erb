<% if logged_in? and (current_user == @post.creator) %>
  <%= link_to "Edit Post", edit_post_path(@post) %>
<% end %>   

<div id="post-<%= @post.id %>">
  <small class='quiet text-left'> On <%= display_datetime(@post.created_at) %></small>
  </br>
  </br>
  <p class="text-center">
    <%= render @post.feelings %>
  </p>

  <blockquote class="blockquote-reverse">
    <p>
      <%= @post.description %>
    </p>
    <footer>
      <span class='quiet'>
        status by
        <%= link_to @post.creator.username, user_path(@post.creator) %>
      </span> 
    </footer>
  </blockquote> 
  <p class="quiet text-center ">
    <small>
    <%= link_to "Originally posted here.", fix_url(@post.url) %>    
    </small>
  </p>     
  <hr>
  </br>  
</div>



