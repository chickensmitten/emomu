<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Register</h1>
  </div>
  <div class="panel-body">
    <%= form_for @user do |f| %>
      <div class='form-group'>
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "A name that puts a smile on your face.", class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "An email you often use.", class: "form-control" %>
      </div>
      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "A reminder that touches your heart.", class: "form-control" %>
      </div>
      <%= f.submit (@user.new_record? ? "Register" : "Update Profile"), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>